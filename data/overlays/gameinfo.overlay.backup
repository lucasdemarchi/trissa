
Game/InfoOverlay
{
	zorder 500
	// Stats block
	container BorderPanel(Game/InfoOverlay/Panel)
	{
		metrics_mode pixels
		vert_align bottom
		left 5 
		top -107
		width 220
		height 100
		material Game/Overlay/InfoBlock
        	//border_size 1 1 1 1
        	//border_material Game/Overlay/InfoBlock
        	//border_topleft_uv     0.0000 1.0000 0.0039 0.9961
	    	//border_top_uv         0.0039 1.0000 0.9961 0.9961
	    	//border_topright_uv    0.9961 1.0000 1.0000 0.9961
	    	//border_left_uv        0.0000 0.9961 0.0039 0.0039
	    	//border_right_uv       0.9961 0.9961 1.0000 0.0039
	    	//border_bottomleft_uv  0.0000 0.0039 0.0039 0.0000
        	//border_bottom_uv      0.0039 0.0039 0.9961 0.0000
	    	//border_bottomright_uv 0.9961 0.0039 1.0000 0.0000

		element TextArea(Game/InfoOverlay/PlayerA/label)
		{
			metrics_mode pixels
			left 5
			top 5
			width 100
			height 50
			font_name BlueHighway
			char_height 19
			caption Player A:
			colour_top 0.5 0.7 0.5
			colour_bottom 0.3 0.5 0.3
		}
		element TextArea(Game/InfoOverlay/PlayerB/label)
		{
			metrics_mode pixels
			left 5
			top 50
			width 100
			height 50
			font_name BlueHighway
			char_height 19
			caption Player B:
			colour_top 0.5 0.7 0.5
			colour_bottom 0.3 0.5 0.3
		}
		element TextArea(Game/InfoOverlay/PlayerA/text)
		{
            metrics_mode pixels
			left 100
			top 5
			width 120
			height 50
			font_name BlueHighway
			char_height 19
			colour_top 0.5 0.7 0.5
			colour_bottom 0.3 0.5 0.3
		}
	}
}
